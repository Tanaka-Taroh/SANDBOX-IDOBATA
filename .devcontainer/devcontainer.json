{
  "name": "Claude Code AI Sandbox with o3-Gemini",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "/bin/bash ./.devcontainer/post-create.sh",
  
  // シェルの設定を明示的に指定
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "GitHub.copilot",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        },
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  },
  
  // 環境変数ファイルの読み込み設定
  "runArgs": [
    "--env-file",
    "${localWorkspaceFolder}/.env"
  ],
  
  "remoteUser": "vscode",
  
  // o3-search-mcp関連の追加設定
  "initializeCommand": "echo 'Preparing o3-search-mcp DevContainer environment...'",
  
  // ライフサイクルフック
  "updateContentCommand": "echo 'Updating container with latest o3-search-mcp configuration...'",
  
  // セキュリティ設定
  "capAdd": [],
  "securityOpt": []
}